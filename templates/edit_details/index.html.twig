{% extends 'base.html.twig' %}

{% block title %}Edit User Details{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <style>
        body {
            background: radial-gradient(circle at center, #C33C3C, #D4A910);
            color: #222;
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 20px 0;
        }
        .edit-wrapper {
            margin: 0 auto;
            max-width: 600px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background: #f7e5cd;
            padding: 30px;
            border-radius: 15px;
            color: #222;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .btn-save {
            background: limegreen;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-cancel {
            background: #6c757d;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-save:hover, .btn-cancel:hover {
            color: black;
        }
        h1 {
            color: #D84315;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            text-align: center;
        }
        label {
            font-weight: 600;
            color: #D84315;
            margin-bottom: 8px;
            display: block;
        }
        ::placeholder {
            color: #555 !important;
            opacity: 1;
        }
        .user-email {
            text-align: center;
            font-size: 1.2rem;
            color: #555;
            margin-bottom: 30px;
            font-weight: 500;
        }
    </style>

    <div class="edit-wrapper">
        <h1>Edit User Details</h1>
        <div class="user-email">{{ user.email }}</div>

        {{ form_start(form, {'action': path('edit_details', {'id': user.id}) }) }}
        <div class="form-group">
            {{ form_label(form.firstName) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'First name'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.lastName) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Last name'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.age) }}
            {{ form_widget(form.age, {'attr': {'class': 'form-control', 'placeholder': 'Age'}}) }}
        </div>

        <div class="text-center" style="margin-top: 30px;">
            <button type="submit" class="btn btn-save">
                <i class="fas fa-save mr-2"></i>Save Changes
            </button>
            <a href="{{ path('user_details', {'id': user.id}) }}" class="btn btn-cancel ml-3">
                <i class="fas fa-times mr-2"></i>Cancel
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
