{% extends 'base.html.twig' %}

{% block title %}Add Festival{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background: radial-gradient(circle at center, #C33C3C, #D4A910);
            color: #222;
            min-height: 100vh;
            padding: 0;
            margin: 0;
        }
        .add-wrapper {
            margin: 40px auto;
            max-width: 600px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background: #f7e5cd;
            padding: 30px;
            border-radius: 15px;
            color: #222;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .btn-save {
            background: limegreen;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
        }
        .btn-save:hover{
            color: black !important;
        }
        .btn-cancel {
            background: #6c757d;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
        }
        .btn-cancel:hover{
            color: black !important;
        }
        h1 {
            color: #D84315;
            margin-bottom: 30px;
            text-align: center;
        }
        label {
            font-weight: 600;
            color: #D84315;
            margin-bottom: 8px;
            display: block;
        }
        ::placeholder {
            color: #555 !important;
            opacity: 1;
        }
        .invalid-feedback {
            color: #dc3545;
            display: block;
            margin-top: 5px;
        }
        .is-invalid {
            border-color: #dc3545 !important;
        }
    </style>

    {% include 'nav_bar/index.html.twig' %}

    <div class="add-wrapper">
        <h1>Add Festival</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {
                'attr': {
                    'class': 'form-control' ~ (form.name.vars.errors|length > 0 ? ' is-invalid' : ''),
                    'placeholder': 'Festival name'
                }
            }) }}
            {% if form_errors(form.name) %}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.name) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.location) }}
            {{ form_widget(form.location, {
                'attr': {
                    'class': 'form-control' ~ (form.location.vars.valid ? '' : ' is-invalid'),
                    'placeholder': 'Festival location'
                }
            }) }}
            {{ form_errors(form.location) }}
        </div>
        {{ form_errors(form) }}

        <div class="text-center" style="margin-top: 30px;">
            <button type="submit" class="btn btn-save">
                <i class="fas fa-save mr-2"></i>Add Festival
            </button>
            <a href="{{ path('festival_list') }}" class="btn btn-cancel ml-3">
                <i class="fas fa-times mr-2"></i>Cancel
            </a>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
