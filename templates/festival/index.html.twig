{% extends 'base.html.twig' %}

{% block title %}Hello FestivalController!{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; background: #aaa; color: black; padding: 15px; border-radius: 20px}
        .example-wrapper code { padding: 2px 6px; }
        html, body{
            background: #222;
            color: #000;
            height: 90%;
        }
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Festivals</h1>

        <ul style="padding: 0;">
            {% for festival in festivals %}
                <li style="list-style: none; border-top: 1px solid #222; border-bottom: 1px solid #222; padding: 12px; font-size: xx-large;">
                    <a href="http://localhost:8000/festival/{{ festival.name }}/editions" style="text-decoration: underline; color: #222">{{ festival.name }}</a>
                    <p style="margin: 0; font-size: medium;">{{ festival.location }}</p>
                    <form action="{{ path('delete_festival', {'id': festival.id}) }}" method="POST" style="display: flex; justify-content: right">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ festival.id) }}">
                        <button type="submit" style="font-size: 20px; background: #C70101; color: white; border: none; border-radius: 6px; padding: 5px 10px; cursor: pointer;">
                            Delete
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                            </svg>
                        </button>
                    </form>
                </li>
            {% endfor %}
        </ul>

        <div class="pagination">
            {{ knp_pagination_render(festivals) }}
        </div>
        <a href="{{ path('add_festival') }}" class="btn btn-success">Add Festival</a>
    </div>
{% endblock %}
