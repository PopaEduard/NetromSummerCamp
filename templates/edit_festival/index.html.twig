{% extends 'base.html.twig' %}

{% block title %}Edit {{ festival.name }}{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background: #aaa;
            color: black;
            padding: 20px;
            border-radius: 20px;
        }
        .example-wrapper code {
            padding: 2px 6px;
        }
        html, body {
            background: #222;
            color: #000;
            height: 90%;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-control {
            background-color: #ddd;
            border: 1px solid #999;
        }
        .btn-primary {
            background-color: dodgerblue;
            border: none;
        }
        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }
    </style>

    <div class="example-wrapper">
        <h1>Edit {{ festival.name }}</h1>

        {{ form_start(form, {'action': path('edit_festival', {'id': festival.id}) }) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.location) }}
            {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div style="margin-top: 20px;">
            <button type="submit" class="btn btn-primary" style="padding: 5px 15px; font-size: 18px;">
                Save Changes
            </button>
            <a href="{{ path('festival_list') }}" class="btn btn-secondary" style="padding: 5px 15px; font-size: 18px; margin-left: 10px;">
                Cancel
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
