{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <style>
        body {
            background: radial-gradient(circle at center, #C33C3C, #D4A910);
            color: #eee;
            min-height: 100vh;
            padding: 20px 0;
            display: flex;
            align-items: center;
        }
        .user-details-wrapper {
            margin: 0 auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background: #f7e5cd;
            padding: 30px;
            border-radius: 15px;
            color: #222;
        }
        .detail-box {
            background: white;
            border-radius: 10px;
            padding: 25px;
            margin: 25px 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-left: 4px solid #D84315;
        }
        .detail-item {
            font-size: 1.2rem;
            padding: 10px 0;
            border-bottom: 1px solid #aaa;
            display: flex;
        }
        .detail-item strong {
            min-width: 150px;
            color: #D84315;
        }
        h1 {
            color: #D84315;
            margin-bottom: 20px;
            font-weight: 700;
        }
        .btn-cancel {
            background: #6c757d;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
            margin: 3px;
            transition: color 0.3s ease;
        }
        .btn-cancel:hover {
            color: black !important;
        }
        .btn-create {
            background: #8A2BE2;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            margin: 3px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
            transition: color 0.3s ease;
        }
        .btn-create:hover {
            color: black !important;
        }
        .btn-edit {
            background: dodgerblue;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            margin: 3px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
            transition: color 0.3s ease;
        }
        .btn-edit:hover {
            color: black !important;
        }
        .action-buttons {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 10px;
        }
        .left-buttons {
            display: flex;
            gap: 10px;
        }
    </style>

    <div class="user-details-wrapper">
        <h1>User Details: {{ user.email }}</h1>

        <div class="detail-box">
            <div class="detail-item">
                <strong>First name:</strong>
                <span>{{ details.firstName }}</span>
            </div>
            <div class="detail-item">
                <strong>Last name:</strong>
                <span>{{ details.lastName }}</span>
            </div>
            <div class="detail-item">
                <strong>Email:</strong>
                <span>{{ user.email }}</span>
            </div>
            <div class="detail-item">
                <strong>Role:</strong>
                <span>{{ user.role }}</span>
            </div>
            <div class="detail-item">
                <strong>Age:</strong>
                <span>{{ details.age }}</span>
            </div>
            <div class="detail-item">
                <strong>Register date:</strong>
                <span>{{ details.registerDate|date('d/m/Y H:i:s') }}</span>
            </div>
            <div class="detail-item">
                <strong>Last login:</strong>
                <span>{{ details.lastLogin|date('d/m/Y H:i:s') }}</span>
            </div>
        </div>

        <div class="action-buttons">
            <div class="left-buttons">
                <a href="{{ path('user_list') }}" class="btn-cancel" style="text-decoration: none">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Users
                </a>
                <a href="{{ path('purchase_list', {'id': user.id}) }}" class="btn-create" style="text-decoration: none">
                    <i class="fas fa-shopping-cart mr-2"></i>View Purchases
                </a>
            </div>
            <a href="{{ path('edit_details', {'id': user.id}) }}" class="btn-edit" style="text-decoration: none;">
                <i class="fas fa-edit mr-2"></i>Edit
            </a>
        </div>
    </div>
{% endblock %}
