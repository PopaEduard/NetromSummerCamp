{% block styles %}
    <style>
        .navbar {
            background: #aaa;
            width: 100%;
            padding: 15px 0;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            position: sticky;
            top: 0;
            z-index: 1000;
            border-bottom: 3px solid #D84315;
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }

        .nav-brand {
            font-size: 24px;
            font-weight: bold;
            color: #222;
            display: flex;
            align-content: center;
            margin-right: 50px;
        }

        .nav-brand-icon {
            color: #D84315;
            margin-right: 10px;
        }

        .nav-links {
            display: flex;
            gap: 25px;
        }

        .nav-link {
            color: #222;
            text-decoration: none;
            font-weight: 500;
            padding: 8px 12px;
            border-radius: 4px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .nav-link:hover {
            color: #D84315;
        }

        .nav-link-icon {
            font-size: 18px;
        }

        .auth-button {
            padding: 8px 20px;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            color: white !important;
        }

        .log-button {
            background: #D84315;
        }
        .log-button:hover{
            color: black !important;
        }
    </style>
{% endblock %}

<nav class="navbar">
    <div class="nav-container">
        <div class="nav-brand">
            <a href="{{ path('homepage') }}" style="text-decoration: none; color: black">
                <i class="fas fa-ticket-alt nav-brand-icon"></i>
                Showtime
            </a>
        </div>

        <div class="nav-links">

            <a href="{{ path('festival_list') }}" class="nav-link {{ app.request.get('_route') == 'festival_list' ? 'active' : '' }}">
                <i class="fas fa-music nav-link-icon"></i>
                <span>Festivals</span>
            </a>

            <a href="{{ path('artist_list') }}" class="nav-link {{ app.request.get('_route') == 'artist_list' ? 'active' : '' }}">
                <i class="fas fa-music nav-link-icon"></i>
                <span>Artists</span>
            </a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('user_list') }}" class="nav-link {{ app.request.get('_route') == 'user_list' ? 'active' : '' }}">
                    <i class="fas fa-users nav-link-icon"></i>
                    <span>Users</span>
                </a>
            {% elseif app.user%}
                <a href="{{ path('user_details', {'id': app.user.id}) }}" class="nav-link {{ app.request.get('_route') == 'user_list' ? 'active' : '' }}">
                    <i class="fas fa-users nav-link-icon"></i>
                    <span>Account details</span>
                </a>
            {% endif %}

        </div>

        <div class="nav-auth">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="auth-button log-button" style="margin-left: 40px; text-decoration: none">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" class="auth-button log-button" style="margin-left: 40px; text-decoration: none">
                    <i class="fas fa-sign-in-alt"></i>
                    <span>Login</span>
                </a>
            {% endif %}
        </div>
    </div>
</nav>
