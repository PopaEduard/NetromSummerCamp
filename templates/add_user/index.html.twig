{% extends 'base.html.twig' %}

{% block title %}Create account{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <style>
        body {
            background: radial-gradient(circle at center, #C33C3C, #D4A910);
            color: #222;
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 20px 0;
        }
        .account-form-wrapper {
            margin: 0 auto;
            max-width: 600px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background: #f7e5cd;
            padding: 30px;
            border-radius: 15px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .btn-create {
            background: limegreen;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
        }
        .btn-cancel {
            background: #6c757d;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
        }
        .btn-create:hover, .btn-cancel:hover{
            color: black;
        }
        h1 {
            color: #D84315;
            margin-bottom: 30px;
            text-align: center;
        }
        label {
            font-weight: 600;
            color: #D84315;
            margin-bottom: 8px;
            display: block;
        }
    </style>

    <div class="account-form-wrapper">
        <h1>Create Account</h1>

        {{ form_start(form, {action: path('new_user')}) }}
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email address'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(detailsForm.firstName) }}
            {{ form_widget(detailsForm.firstName, {'attr': {'class': 'form-control', 'placeholder': 'First name'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(detailsForm.lastName) }}
            {{ form_widget(detailsForm.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Last name'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(detailsForm.age) }}
            {{ form_widget(detailsForm.age, {'attr': {'class': 'form-control', 'placeholder': 'Age'}}) }}
        </div>

        {{ form_rest(detailsForm) }}

        {{ form_errors(form) }}
        {{ form_errors(detailsForm) }}

        <div class="text-center" style="margin-top: 30px;">
            <button type="submit" class="btn-create">
                <i class="fas fa-user-plus mr-2"></i>Create Account
            </button>
            <a href="{{ path('app_login') }}" class="btn-cancel ml-3" style="text-decoration: none">
                <i class="fas fa-times mr-2"></i>Cancel
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
