{% extends 'base.html.twig' %}

{% block title %}{{ details.firstName }}'s Tickets{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <style>
        body {
            background: radial-gradient(circle at center, #C33C3C, #D4A910);
            color: #eee;
            min-height: 100vh;
            padding: 20px 0;
        }
        .ticket-wrapper {
            margin: 0 auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background: #f7e5cd;
            padding: 30px;
            border-radius: 15px;
            color: #222;
        }
        .ticket-header {
            margin-bottom: 30px;
            border-bottom: 2px solid #D84315;
            padding-bottom: 15px;
        }
        .ticket-header h1 {
            color: #D84315;
            font-weight: 700;
            margin-bottom: 5px;
        }
        .ticket-header h4 {
            color: #555;
            font-weight: 400;
        }
        .ticket-item {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            border-left: 4px solid #D84315;
            position: relative;
        }
        .ticket-info {
            font-size: 1.2rem;
            margin-bottom: 5px;
            color: #333;
        }
        .ticket-details {
            font-weight: bold;
            color: #D84315;
        }
        .btn-back {
            background: #6c757d;
            border: none;
            border-radius: 8px;
            padding: 10px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
            margin-bottom: 5px;
            margin-top: 10px;
            transition: all 0.3s ease;
            display: inline-block;
            text-decoration: none;
        }
        .btn-back:hover {
            color: black;
        }
        .btn-delete {
            position: absolute;
            top: 20px;
            right: 20px;
            background: #E74C3C;
            border: none;
            border-radius: 8px;
            padding: 8px 15px;
            font-weight: bold;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .btn-delete:hover {
            color: black;
        }
        .btn-create {
            background: dodgerblue;
            border: none;
            border-radius: 8px;
            padding: 10px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
            margin-bottom: 5px;
            margin-top: 10px;
            transition: all 0.3s ease;
            display: inline-block;
            text-decoration: none;
        }
        .btn-create:hover {
            color: black;
        }
        .no-tickets {
            background: #f7e5cd;
            border-radius: 10px;
            padding: 30px;
            text-align: center;
            color: #555;
            font-style: italic;
            border-left: 4px solid #D84315;
        }
    </style>

    <div class="container">

        <div class="ticket-wrapper">
            <div class="ticket-header">
                <h1>{{ details.firstName }} {{ details.lastName }}'s Tickets</h1>
                <h4>{{ user.email }}</h4>
            </div>

            {% if purchases is empty %}
                <div class="no-tickets">
                    No tickets found
                </div>
            {% else %}
                {% for purchase in purchases %}
                    <div class="ticket-item">
                        <div class="ticket-info">
                            <span class="ticket-details"><a href="{{ path('editions_list', {'name': purchase.festivalId.name}) }}" style="text-decoration: none; color: #D84315">{{ purchase.festivalId.name }}</a>></span> -
                            {{ purchase.typeId.type }} -
                            ${{ purchase.typeId.price }}
                        </div>
                        {% if is_granted('ROLE_ADMIN') %}
                            <form action="{{ path('delete_purchase', {'id': purchase.id}) }}" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ purchase.id) }}">
                                <button type="submit" class="btn-delete">
                                    Delete
                                    <i class="fas fa-trash ml-2"></i>
                                </button>
                            </form>
                        {% endif %}
                    </div>
                {% endfor %}
            {% endif %}
            <a href="{{ path('user_details', {'id': user.id}) }}" class="btn-back" style="text-decoration: none">
                <i class="fas fa-arrow-left mr-2"></i>Back to User Details
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('add_purchase', {'id': user.id}) }}" class="btn-create" style="text-decoration: none">
                    <i class="fas fa-arrow-left mr-2"></i>Add Ticket
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
