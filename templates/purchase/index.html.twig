{% extends 'base.html.twig' %}

{% block title %}Hello EditionsController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; background: #aaa; color: black; padding: 5px 10px 10px 20px; border-radius: 20px}
        .example-wrapper code { padding: 2px 6px; }
        html, body{
            background: #222;
            color: #000;
            height: 90%;
        }
    </style>

    <div style="font: 30px sans-serif; background: #aaa; display: inline-block; border-radius: 4px">
        <a href="http://localhost:8000/user" style="text-decoration: none; color: #222">Users</a>
    </div>

    <div class="example-wrapper">
        <h1>{{ details.firstName }} {{ details.lastName }} tickets</h1>
        <h4>{{ user.email }}</h4>
        <ul>
            {% for purchase in purchases %}
                <li>{{ purchase.festivalId.name }} - {{ purchase.typeId.type }} - {{ purchase.typeId.price }}</li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}
