{% extends 'base.html.twig' %}

{% block title %}Edit Edition{% endblock %}

{% block body %}
    {% include 'nav_bar/index.html.twig' %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        body {
            background: radial-gradient(circle at center, #C33C3C, #D4A910);
            color: #222;
            min-height: 100vh;
            padding: 0;
            margin: 0;
        }
        .edit-wrapper {
            margin: 40px auto;
            max-width: 600px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background: #f7e5cd;
            padding: 30px;
            border-radius: 15px;
            color: #222;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .btn-save {
            background: limegreen;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
        }
        .btn-save:hover {
            color: black !important;
        }
        .btn-cancel {
            background: #6c757d;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
        }
        .btn-cancel:hover {
            color: black !important;
        }
        h1 {
            color: #D84315;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            text-align: center;
        }
        label {
            font-weight: 600;
            color: #D84315;
            margin-bottom: 8px;
            display: block;
        }
    </style>

    <div class="edit-wrapper">
        <h1>Edit Edition</h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {{ form_start(form, { 'action': path('edit_edition', { 'name': festival.name, 'id': edition.id }) }) }}
        <div class="form-group">
            {{ form_label(form.startDate) }}
            {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.startDate) }}
        </div>
        <div class="form-group">
            {{ form_label(form.endDate) }}
            {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.endDate) }}
        </div>
        <div class="form-group">
            {{ form_label(faForm.artists) }}
            {{ form_widget(faForm.artists, {'attr': {'class': 'form-control select2'}}) }}
            {{ form_errors(faForm.artists) }}
        </div>

        {{ form_rest(faForm) }}
        <div class="text-center" style="margin-top: 30px;">
            <button type="submit" class="btn btn-save">
                <i class="fas fa-save mr-2"></i>Save Changes
            </button>
            <a href="{{ path('editions_list', {'name': festival.name}) }}" class="btn btn-cancel ml-3">
                <i class="fas fa-times mr-2"></i>Cancel
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
