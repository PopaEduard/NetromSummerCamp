{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background: radial-gradient(circle at center, #C33C3C, #D4A910);
            color: #222;
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 20px 0;
        }
        .edition-wrapper {
            margin: 0 auto;
            max-width: 600px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background: #f7e5cd;
            padding: 30px;
            border-radius: 15px;
            color: #222;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .btn-primary {
            background: limegreen;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
        }
        .btn-primary:hover {
            color: black !important;
            background-color: limegreen;
        }
        .btn-secondary {
            background: #6c757d;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white;
        }
        .btn-secondary:hover {
            color: black !important;
        }
        h1 {
            color: #D84315;
            margin-bottom: 30px;
            text-align: center;
        }
        .festival-title {
            color: #D84315;
            margin-bottom: 10px;
        }
        p {
            text-align: center;
            margin-bottom: 30px;
            color: #555;
        }
        label {
            font-weight: 600;
            color: #D84315;
            margin-bottom: 8px;
            display: block;
        }
        .form-section {
            margin-bottom: 30px;
        }
        .form-section-title {
            font-weight: bold;
            color: #D84315;
            margin-bottom: 15px;
            padding-bottom: 5px;
            border-bottom: 2px solid #D84315;
        }
        .text-center {
            text-align: center;
        }
        .mt-4 {
            margin-top: 30px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="edition-wrapper">
        <h1 class="festival-title">Add New Edition</h1>
        <p>for {{ festival.name }} in {{ festival.location }}</p>

        {{ form_start(form, { 'attr': {'action': path('add_edition', {'name': festival.name})} }) }}
        <div class="form-section">

            <div class="form-group">
                {{ form_label(form.startDate) }}
                {{ form_widget(form.startDate, {
                    'attr': {'class': 'form-control'}
                }) }}
                {{ form_errors(form.startDate) }}
            </div>

            <div class="form-group">
                {{ form_label(form.endDate) }}
                {{ form_widget(form.endDate, {
                    'attr': {'class': 'form-control'}
                }) }}
                {{ form_errors(form.endDate) }}
            </div>
            {{ form_rest(form) }}

            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(artistForm.artists) }}
                {{ form_widget(artistForm.artists, {
                    'attr': {'class': 'form-control select2'}
                }) }}
            </div>
        </div>

        {{ form_rest(artistForm) }}

        {{ form_errors(artistForm) }}

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save mr-2"></i>Create Edition
            </button>
            <a href="{{ path('editions_list', {'name': festival.name}) }}" class="btn btn-secondary ml-3">
                <i class="fas fa-times mr-2"></i>Back to List
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
