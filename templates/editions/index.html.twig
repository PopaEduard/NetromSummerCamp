{% extends 'base.html.twig' %}

{% block title %}{{ festival.name }} Editions{% endblock %}

{% block stylesheets %}
    {% include 'nav_bar/index.html.twig' %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <style>
        body {
            background: radial-gradient(circle at center, #C33C3C, #D4A910);
            color: #eee;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .content-wrapper {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .festival-wrapper {
            margin: 20px auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background: #f7e5cd;
            padding: 30px;
            border-radius: 15px;
            color: #222;
        }

        .festival-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .festival-title {
            font-size: 2.5rem;
            color: #D84315;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .festival-location {
            font-size: 1.2rem;
            color: #333;
            font-style: italic;
        }

        .edition-box {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            position: relative;
            border-left: 4px solid #D84315;
        }

        .edition-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .edition-year {
            font-size: 1.5rem;
            color: #D84315;
            font-weight: 600;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn-action {
            font-size: 0.9rem;
            color: white !important;
            border: none;
            border-radius: 6px;
            padding: 8px 15px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

        .btn-delete {
            background: #E74C3C;
        }

        .btn-delete:hover {
            background: #C0392B;
        }

        .dates-container {
            display: flex;
            gap: 20px;
            margin-bottom: 15px;
        }

        .date-item {
            background: #f0f0f0;
            padding: 8px 12px;
            border-radius: 5px;
            font-weight: 500;
        }

        .artist-list {
            margin-top: 15px;
        }

        .artist-item {
            background: #f8f8f8;
            padding: 10px 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-left: 3px solid #D4A910;
        }

        .artist-info {
            flex: 1;
        }

        .artist-name {
            font-weight: 600;
            color: #333;
        }

        .artist-genre {
            font-style: italic;
            color: #666;
            font-size: 0.9rem;
        }

        .add-btn {
            display: block;
            width: 100%;
            max-width: 200px;
            margin: 30px auto 10px;
            text-align: center;
            background: limegreen;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: bold;
            letter-spacing: 0.5px;
            color: white !important;
            text-decoration: none;
        }

        .add-btn:hover {
            color: black !important;
        }

        .no-editions {
            text-align: center;
            padding: 30px;
            color: #666;
            font-style: italic;
            background: white;
            border-radius: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="festival-wrapper">
            <div class="festival-header">
                <h1 class="festival-title">{{ festival.name }}</h1>
                <div class="festival-location">{{ festival.location }}</div>
            </div>

            <div class="edition-list">
                {% for edition in editions %}
                    <div class="edition-box">
                        <div class="edition-header">
                            <div class="edition-year">{{ edition.startDate|date('Y') }} Edition</div>
                            <div class="action-buttons">
                                <form action="{{ path('delete_edition', {'name': festival.name, 'id': edition.id}) }}" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ edition.id) }}">
                                    <button type="submit" class="btn-action btn-delete">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                        </svg>
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>

                        <div class="dates-container">
                            <div class="date-item">
                                <strong>Start:</strong> {{ edition.startDate|date('d/m/Y') }}
                            </div>
                            <div class="date-item">
                                <strong>End:</strong> {{ edition.endDate|date('d/m/Y') }}
                            </div>
                        </div>

                        <div class="artist-list">
                            <h5>Featured Artists:</h5>
                            {% for fa in festivalArtists %}
                                {% if edition.id == fa.editionId.id %}
                                    <div class="artist-item">
                                        <div class="artist-info">
                                            <div class="artist-name">{{ fa.artistId.name }}</div>
                                            <div class="artist-genre">{{ fa.artistId.musicGenre }}</div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% else %}
                                <div class="artist-item">
                                    No artists for this edition
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <div class="no-editions">
                        No editions found for this festival
                    </div>
                {% endfor %}
            </div>

            <a href="{{ path('add_edition', {'name': festival.name}) }}" class="add-btn" style="text-decoration: none">
                Add Edition
            </a>
        </div>
    </div>
{% endblock %}
