{% extends 'base.html.twig' %}

{% block title %}Hello EditionsController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; background: #aaa; color: black; padding: 5px 10px 10px 20px; border-radius: 20px}
        .example-wrapper code { padding: 2px 6px; }
        html, body{
            background: #222;
            color: #000;
            height: 90%;
        }
    </style>

    <div style="font: 30px sans-serif; background: #aaa; display: inline-block; border-radius: 4px">
        <a href="http://localhost:8000/festival" style="text-decoration: none; color: #222">Festivals</a>
    </div>

<div class="example-wrapper">
    <h1>{{ festival.name }}</h1>
    <h3>{{ festival.location }}</h3>
    <ul>
        {% for edition in editions %}
            <li>
                <details>
                    <summary style="cursor: pointer">{{ edition.startDate|date('Y') }}</summary>
                    <p>Start Date: {{ edition.startDate|date('d/m/Y') }}</p>
                    <p>End Date: {{ edition.endDate|date('d/m/Y') }}</p>
                    <p>Artists:</p>

                    <ul>
                        {% for fa in festivalArtists %}
                            {% if edition.id == fa.editionId.id %}
                                <li>{{ fa.artistId.name }} - {{ fa.artistId.musicGenre }} -  {{ fa.stageId.name }}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </details>
            </li>
        {% endfor %}

    </ul>

</div>
{% endblock %}
